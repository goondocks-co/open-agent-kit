{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/schemas/hooks.json",
  "$comment": "Codebase Intelligence hooks for Claude Code. {{PROJECT_ROOT}} is replaced with the project directory. Port is read from .oak/ci/daemon.port at runtime, allowing port changes without hook reinstall. OAK hooks are identified by the /api/oak/ci/ URL pattern. Hook events are logged to .oak/ci/hooks.log for debugging.",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "{{PROJECT_ROOT}}/.claude/hooks/oak-ci-hook.sh SessionStart",
            "timeout": 30
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "{{PROJECT_ROOT}}/.claude/hooks/oak-ci-hook.sh UserPromptSubmit",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "{{PROJECT_ROOT}}/.claude/hooks/oak-ci-hook.sh PostToolUse",
            "timeout": 30
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "{{PROJECT_ROOT}}/.claude/hooks/oak-ci-hook.sh Stop",
            "timeout": 30
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "{{PROJECT_ROOT}}/.claude/hooks/oak-ci-hook.sh SessionEnd",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "{{PROJECT_ROOT}}/.claude/hooks/oak-ci-hook.sh PostToolUseFailure",
            "timeout": 30
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "{{PROJECT_ROOT}}/.claude/hooks/oak-ci-hook.sh SubagentStart",
            "timeout": 30
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "{{PROJECT_ROOT}}/.claude/hooks/oak-ci-hook.sh SubagentStop",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
