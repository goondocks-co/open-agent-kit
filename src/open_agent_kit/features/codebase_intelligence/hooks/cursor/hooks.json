{
  "$comment": "Codebase Intelligence hooks for Cursor. {{PORT}} is replaced with the project-specific daemon port. {{PROJECT_ROOT}} is replaced with the project directory. OAK hooks are identified by the /api/oak/ci/ URL pattern. Hook events are logged to .oak/ci/hooks.log for debugging.",
  "version": 1,
  "hooks": {
    "sessionStart": [
      {
        "command": "{{PROJECT_ROOT}}/.cursor/hooks/oak-ci-hook.sh sessionStart"
      }
    ],
    "beforeSubmitPrompt": [
      {
        "command": "{{PROJECT_ROOT}}/.cursor/hooks/oak-ci-hook.sh beforeSubmitPrompt"
      }
    ],
    "afterFileEdit": [
      {
        "command": "{{PROJECT_ROOT}}/.cursor/hooks/oak-ci-hook.sh afterFileEdit"
      }
    ],
    "afterAgentResponse": [
      {
        "command": "{{PROJECT_ROOT}}/.cursor/hooks/oak-ci-hook.sh afterAgentResponse"
      }
    ],
    "stop": [
      {
        "command": "{{PROJECT_ROOT}}/.cursor/hooks/oak-ci-hook.sh stop"
      }
    ],
    "sessionEnd": [
      {
        "command": "{{PROJECT_ROOT}}/.cursor/hooks/oak-ci-hook.sh sessionEnd"
      }
    ]
  }
}
