{
  "$comment": "Codebase Intelligence hooks for VS Code Copilot (agent mode). Uses Claude Code-compatible format per https://code.visualstudio.com/docs/copilot/customization/hooks",
  "hooks": {
    "SessionStart": [
      { "type": "command", "command": "{oak-cli-command} ci hook SessionStart --agent vscode-copilot", "timeout": 60 }
    ],
    "UserPromptSubmit": [
      { "type": "command", "command": "{oak-cli-command} ci hook UserPromptSubmit --agent vscode-copilot", "timeout": 60 }
    ],
    "PreToolUse": [
      { "type": "command", "command": "{oak-cli-command} ci hook PreToolUse --agent vscode-copilot", "timeout": 60 }
    ],
    "PostToolUse": [
      { "type": "command", "command": "{oak-cli-command} ci hook PostToolUse --agent vscode-copilot", "timeout": 60 }
    ],
    "PreCompact": [
      { "type": "command", "command": "{oak-cli-command} ci hook PreCompact --agent vscode-copilot", "timeout": 60 }
    ],
    "SubagentStart": [
      { "type": "command", "command": "{oak-cli-command} ci hook SubagentStart --agent vscode-copilot", "timeout": 60 }
    ],
    "SubagentStop": [
      { "type": "command", "command": "{oak-cli-command} ci hook SubagentStop --agent vscode-copilot", "timeout": 60 }
    ],
    "Stop": [
      { "type": "command", "command": "{oak-cli-command} ci hook Stop --agent vscode-copilot", "timeout": 60 }
    ]
  }
}
